<script>

/* INPUT REFERENCES */
const firstname = document.getElementById("firstname");
const middlename = document.getElementById("middlename");
const lastname = document.getElementById("lastname");
const contact = document.getElementById("contact");

const nameError = document.getElementById("nameError");
const contactError = document.getElementById("contactError");

/* NAME VALIDATION */
   
function validateNameField(field) {
  field.addEventListener("input", () => {
    if (/[0-9]/.test(field.value)) {
      field.classList.add("invalid");
      nameError.textContent = "Please enter letters only for name fields";
    } else {
      field.classList.remove("invalid");
      nameError.textContent = "";
    }
  });
}

validateNameField(firstname);
validateNameField(lastname);

/*
   MIDDLE INITIAL VALIDATION (A or A.)
    */
middlename.addEventListener("input", () => {
  let val = middlename.value.toUpperCase();
  const pattern = /^[A-Z]\.?$/;

  if (val === "" || pattern.test(val)) {
    middlename.classList.remove("invalid");
    nameError.textContent = "";
  } else {
    middlename.classList.add("invalid");
    nameError.textContent = "Middle initial must be 1 letter only (A or A. )";
  }
});

/* 
   CONTACT NUMBER VALIDATION
    */
contact.addEventListener("input", () => {
  if (!/^[0-9]*$/.test(contact.value)) {
    contact.classList.add("invalid");
    contactError.textContent = "Please enter numbers only for contact number";
  } else {
    contact.classList.remove("invalid");
    contactError.textContent = "";
  }
});

/*
   FORM SUBMISSION + BLUR POPUP
    */
const form = document.getElementById("studentForm");
const popup = document.getElementById("successPopup");
const blurBG = document.getElementById("popupBlur");

form.addEventListener("submit", (e) => {
  e.preventDefault();

  const invalidField = document.querySelector("input.invalid");

  if (invalidField) {
    invalidField.scrollIntoView({ behavior: "smooth", block: "center" });
    alert("Please correct the highlighted fields.");
    return;
  }

  blurBG.style.display = "block";
  popup.classList.add("show");

  setTimeout(() => {
    popup.classList.remove("show");
    blurBG.style.display = "none";
  }, 2000);

  form.reset();
});
</script>

